.bg-container {
    background-image: url(" https://d2clawv67efefq.cloudfront.net/ccbp-static-website/newsbg.png");
    height: 100vh;
    background-size: cover;
}

.card-container {
    background-color: #ffffff;
    padding: 30px;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;

}

.heading {
    color: #323f4b;
    font-family: "Roboto";
    text-align: left;
    font-size: 20px;

}

.paragraph {
    color: #7b8794;
    font-family: "Roboto";
    text-align: left;

}

.button {
    background-color: #323f4b;
    font-family: "Roboto";
    color: #ffffff;
    height: 40px;
    width: 150px;
    border-radius: 10px;
    margin: 0.2px;
    width: 100px;
}
